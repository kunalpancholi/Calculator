<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:stretchColumns="*"
    android:weightSum="7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appwallaz.calculator.MainActivity">

    <TextView
        android:layout_weight="2"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:gravity="right"
        android:id="@+id/tvdis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp" />
        <TableRow android:layout_weight="1">


            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="c" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+/-" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/per"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="%" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_weight="1"


            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"

                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:id="@+id/mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:layout_span="2"
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0" />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"

                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="." />

            <Button
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:id="@+id/eq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="=" />
        </TableRow>
    </TableLayout>
